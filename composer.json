    "pimple/pimple": "~1.0",
    "guzzle/guzzle": "~3.7"
  },
  "require-dev": {
    "phpunit/phpunit": "3.7.*",
    "mockery/mockery": "dev-master@dev",
    "athletic/athletic": "~0.1",
