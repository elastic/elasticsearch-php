parameters:
    phpVersion: 70100
    level: 2
    paths:
        - src/
    ignoreErrors:
        - '#^Unsafe usage of new static\(\)\.$#'
        # PHP 7.1 only
        - '#^Constant JSON_THROW_ON_ERROR not found\.$#'
        - '#^Caught class JsonException not found\.$#'
        - '#^Call to method getCode\(\) on an unknown class JsonException\.$#'
